<resources>

    <style name="Theme.MyStoryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dicoding_theme</item>
        <item name="colorPrimaryVariant">@color/dicoding_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dicoding_theme</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white_smoke</item>
